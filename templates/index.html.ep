%      and $src->{day} == $today->{day} ) {
      <tr class="today">
%     }
%     else {
      <tr>
%     }
        <td><%= $mon %></td><td><%= $src->{day} %></td><td><%= $src->{label_begin} %></td><td><%= $src->{label_end} %></td>
      </tr>
% }
